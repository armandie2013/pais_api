<nav class="bg-black shadow-md">
    <div class="container mx-auto flex justify-between items-center p-4">
      
      <!-- Logo o Título -->
      <a href="/" class="text-white font-bold text-xl">
        Países App
      </a>
  
      <!-- Menú de navegación -->
      <ul class="flex space-x-6">
        <% if (typeof navbarLinks !== 'undefined' && Array.isArray(navbarLinks)) { %>
          <% navbarLinks.forEach(link => { %>
            <li>
              <a href="<%= link.href %>" class="text-gray-300 hover:text-white transition-colors font-semibold">
                <%= link.text %>
              </a>
            </li>
          <% }) %>
        <% } else { %>
          <!-- Si no hay links definidos -->
          <li>
            <a href="/" class="text-gray-300 hover:text-white transition-colors font-semibold">
              Inicio
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>